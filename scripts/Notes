
#!/bin/bash

dir=~/.notes/

[[ "$1" ]] && mv "$@" $dir && exit

while true; do

clear; echo -e "\033[33m N o t e s\033[0m"

declare -A file
c=1
echo
for i in `ls $dir`; do
  printf " %2d: %s\n" "$c" "$i"
  file[$c]="$i"
  c=$((c+1))
done
echo

printf ' Select: n\b' && read I

[[ -z "$I" ]] && clear && exit

#printf "\n ${file[$I]}"
echo
#echo "$dir${file[$I]}"
nano -mSixT2 "$dir${file[$I]}"

done
